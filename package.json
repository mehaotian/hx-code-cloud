{
	"name": "codeCloud",
	"description": "代码云,收藏你优秀的代码块",
	"displayName": "伟大代码收藏夹",
	"version": "0.0.1",
	"publisher": "meHaoTian",
	"engines": {
		"HBuilderX": "^3.0.0"
	},
	"categories": [
		"Other"
	],
	"main": "./main",
	"activationEvents": [
		"onCommand:ht.code.copycode",
		"onCommand:ht.code.insertcode",
		"onCommand:ht.code.mycode"
	],
	"contributes": {
		"viewsContainers": {
			"rightside": [
				{
					"id": "ht.code.webview",
					"title": "我的代码收藏"
				}
			]
		},
		"views": {
			"ht.code.webview": [
				{
					"id": "ht.code.mycodeview",
					"name": "我的代码收藏"
				}
			]
		},
		"commands": [
			{
				"command": "ht.code.copycode",
				"title": "添加选中代码或当前行到 GreatCode"
			},
			{
				"command": "ht.code.insertcode",
				"title": "插入上次代码（暂时无用）"
			},
			{
				"command": "ht.code.mycode",
				"title": "打开 GreatCode 控制台"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "ht.code.copycode",
					"group": "z_commands",
					"when": "editorTextFocus"
				},
				{
					"command": "ht.code.insertcode",
					"group": "z_commands",
					"when": "editorTextFocus"
				},
				{
					"command": "ht.code.mycode",
					"group": "z_commands",
					"when": "editorTextFocus"
				},
				{
					"group": "z_commands"
				}
			]
		}
	},
	"extensionDependencies": [
		"plugin-manager"
	],
	"devDependencies": {
		"axios": "^0.21.1"
	}
}
